type Country
type Color

pred color(Country,Color)
pred neighbor(Country,Country)
pred different(Color,Color)

search color neighbor

example 1 {
	const Country Belgium Germany Poland
	const Color Red Green

	color(Belgium,Red)
	color(Germany,Green)
	color(Poland,Red)
	neighbor(Belgium,Germany)
	neighbor(Germany,Poland)
	neighbor(Germany,Belgium)
	neighbor(Poland,Germany)
	different(Red,Green)
	different(Green,Red)
}