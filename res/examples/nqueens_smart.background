theory B : V {
	{
		! i : gap(i, i, 0) <- i > 0.
		! i1 i2 : gap(i1, i2, i2 - i1) <- i1 > 0 &  i2 > 0 & i1 < i2.
		! i1 i2 d : gap(i2, i1, d) <- gap(i1, i2, d).
	}
    ! i : i > 0 => gap(i, i, 0).
    ! i1 i2 : i1 > 0 &  i2 > 0 & i1 < i2 => gap(i1, i2, i2 - i1).
    ! i1 i2 : i1 > 0 &  i2 > 0 & i1 > i2 => gap(i1, i2, i1 - i2).
}